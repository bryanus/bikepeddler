<h3><%= @post.title %></h3>
<h4><%= @post.price %></h4>
<%= simple_format(@post.description) %>

<%= link_to 'edit', edit_post_path(@post) %>

<%= link_to 'upload photos', new_post_image_path(@post) %>
<%= link_to 'delete', @post, method: :delete, data: { confirm: "Are you sure?" } %>

<div class="row-fluid">
	<div class="container">
	  <ul class="thumbnails">
	    <% @post.images.sort.each do |pic| %>
	     	<li class="span3">
	     		<%= link_to image_tag(pic.image_file.url(:thumb).to_s), pic.image_file_url, rel: 'shadowbox[gallery]' %>	
					

					<%#= link_to 'Remove', post_image_path(@post, pic.id), :confirm => "Delete this photo?", :method => 'delete' %>
				</li>
	    <% end %>
	  </ul>
	</div>
</div>