<%= form_for @post do |f| %>
 	<%= f.text_field :title, :class => 'input-xxlarge', :placeholder => 'Title' %><br />
 	<%= f.text_field :price, :class => 'input-medium', :placeholder => 'Price' %><br />
 	<%= f.text_area :description, :rows => '10', :class => 'input-xxlarge', :placeholder => 'Description' %><br />
 <%= f.submit 'Continue', :class => 'btn btn-primary'%>
 <%#= link_to 'Back', posts_path %>
<% end %>

