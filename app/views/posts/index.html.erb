<div class="container">

	<ul class="thumbnails">
	  <% @posts.each do |post| %>
		  <li>
		  	<!-- how to do this with link_to? -->
		    <%= link_to post_path(post) do %>
		    	<div class="thumbnail">
			      <% if post.images.exists? %>
			      	<%= image_tag post.images.order('created_at ASC').first.image_file_url(:thumb).to_s %>
			      <% end %>
			      <h5><%= truncate(post.title, :length => 22) %></h5>
			      <h6><%= number_to_currency( post.price, :unit => currency_type(post.currency)) %></h6>
			  <% end %>    
			      <!-- <p><%#= sanitize(truncate(post.description), :length => 50) %> -->
			    </div>
			  
		  </li>
		<% end %>
	</ul>

