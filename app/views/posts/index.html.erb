<div class="container">
	
	<ul class="thumbnails">
	  <% @posts.each do |post| %>
		  <% if post.status == 0 %>
		  <li>
		    <%= link_to post_path(post) do %>
			    	<div class="thumbnail">
				      <% if post.has_image? %>
				      	<%= image_tag post.images.order('created_at ASC').first.image_file_url(:thumb).to_s %>
					      <h5><%= truncate(post.title, :length => 22) %></h5>
					      <h6><%= number_to_currency( post.price, :unit => currency_type(post.currency)) %></h6>
				      <% else %>
					      <%= image_tag "placeholder-thumbnail.gif", :alt => "missing image" %>
					      <h5><%= truncate(post.title, :length => 22) %></h5>
					      <h6><%= number_to_currency( post.price, :unit => currency_type(post.currency)) %></h6>
					    <% end %> 
				  <% end %>    
			      <!-- <p><%#= sanitize(truncate(post.description), :length => 50) %> -->
			    </div>
			  <% end %>  
			  
		  </li>
		<% end %>
	</ul>



	<div class="pagination pagination-small pagination-centered">
  <ul>
    <li><a href="#">Prev</a></li>
    <li><a href="#">1</a></li>
    <li><a href="#">2</a></li>
    <li><a href="#">3</a></li>
    <li><a href="#">4</a></li>
    <li><a href="#">5</a></li>
    <li><a href="#">Next</a></li>
  </ul>
</div>

</div>
