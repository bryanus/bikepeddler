<h2>Step 2: Upload or Edit photos</h2>

<%= form_for [@post, @image], html: {:id => 'imageupload'}, :remote => true do |f| %>
	<%= f.file_field :image, multiple: :true, name: "image[image_file]" %>
<% end %>

<%= link_to "View Your Listing", post_path(@post), :class => 'btn' %> 

<div id="post">
	<%= render 'post_images' %>
</div>