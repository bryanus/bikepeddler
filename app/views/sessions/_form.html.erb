<!-- Uses form tag instead of form for because not using a model -->
<div class="form-inline">
	<%= form_tag sessions_path do %>

		<div class="form-group">
			<%= text_field_tag :email, params[:email], :class => 'form-control', :placeholder => 'email address' %>
		</div>
		<div class="form-group">	
			<%= password_field_tag :password, params[:password], :class => 'form-control', :placeholder => 'password' %>
		</div>
		<%= submit_tag "Log in", :class => 'btn btn-primary' %>
		<%#= check_box_tag :remember_me, 1, params[:remember_me] %> <!-- Remember me -->
		<div class="vertical-link-group">
			<%= link_to "Forgot your password?", new_password_reset_path %> <%= link_to "Need to register?", signup_path %>
		</div>
<% end %>
</div>
